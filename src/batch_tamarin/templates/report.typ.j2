== Error Summary

{% if charts.error_types %}
#figure(
  {{ charts.error_types.to_typst_table() }},
  caption: [Error Types Distribution]
)
{% endif %}

#figure(
  table(
    columns: (1fr, 1fr, 1fr, 1fr, 1fr, 1fr, 2fr),
    stroke: 0.5pt,
    [*Task*], [*Lemma*], [*Version*], [*Options*], [*Resources*], [*Error Type*], [*Description*],
    {% for error in report_data.error_details %}
    [`{{ error.task }}`],
    [`{{ error.lemma }}`],
    [{{ error.version }}],
    [{{ error.options }}],
    [{{ error.resources }}],
    [{{ error.type }}],
    [{{ error.message }}],
    {% endfor %}
  ),
  caption: [Detailed Error Information]
)

